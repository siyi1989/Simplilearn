  <build>
    <finalName>Section7LEP2</finalName>
    <sourceDirectory>src/main</sourceDirectory>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>
             <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
        		<artifactId>maven-war-plugin</artifactId>
          		<configuration>
                     <webXml>src\main\webapp\WEB-INF\web.xml</webXml>        
                 </configuration>
   		        <version>2.4</version>
        		<executions>
          			<execution>
            			<id>default-war</id> 
            			<phase>package</phase>
            			<goals>
              				<goal>war</goal>
            			</goals>
          			</execution>
        		</executions>
      		</plugin>
	     

        </plugins>
  </build>
  
  
